<section class="section">

<div class="button">
<button type="button">
<%= link_to "Add a comment", new_user_post_comment_path(@user, @post) %>
</button>
</div>

<%= link_to 'Like', user_post_likes_path(@post.author_id, @post), method: :post, remote: true %>

<%= render 'post', post: @post %>

<% if @post.comments_counter > 0 %>
          <% @post.comments.each do |comment| %>
            <%= render 'comments', comment: comment, user: @user %>
            <% end %>
    <% end %>

   
</section>