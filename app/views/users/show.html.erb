<head>
  <%= stylesheet_link_tag 'style' %>
</head>

<section class="section">

<% if @user.nil? %>
  <h4>User not found</h4>
<% else %>
<div>
  <%= render 'user', user: @user %>
<div>

<%= render 'bio' %>

<ul>
<% @user.posts.each do |post| %>
  <%= render 'post', post: post %>
<% end %>
</ul>

<% end %>
<div>
  <button type="button">See all posts</button>
</div>
</section>